LOCAL_DIR := $(PWD)

ifndef FINS_ROOT_DIR
FINS_ROOT_DIR := $(LOCAL_DIR)/../..
export FINS_ROOT_DIR
endif

# fins.mk contains the compiler and linker options for each target platform
include $(FINS_ROOT_DIR)/settings.finsmk

#Name of the module
PROJECT_NAME = launcher

#CFLAGS += $(CAPTURER_INC)
OBJS = 

#This is an autogenerated list of includes used in this project
INCLUDES = 
#INCLUDES = $(shell ls $(subst -I,, $(CAPTURER_INC)) | grep \\.h)

#### TARGETS #####
.PHONY:all
all:$(PROJECT_NAME)
	@echo "$(PROJECT_NAME) is compiled\n"

.PHONY:update
update:
	@android update project -p . -t android-17 --subprojects

$(PROJECT_NAME):
	@ndk-build all
	@ant debug

.PHONY:clean
clean:
	@ndk-build clean

.PHONY:install
install: $(PROJECT_NAME)
	@adb install -r bin/fins_launcher-debug.apk
	
.PHONY:test
test:
	@echo "OBJS='$(OBJS)'"
	@echo "PCAP_OBJS='$(PCAP_OBJS)'"
	@echo "FULL_OBJS='$(FULL_OBJS)'"
	@echo "LOCAL_DIR='$(LOCAL_DIR)'"
	@echo "PCAP_DIR='$(PCAP_DIR)'"
	@echo "GLUE_DIR='$(GLUE_DIR)'"	
	@echo "CFLAGS='$(CFLAGS)'"
	@echo "LDFLAGS='$(LDFLAGS)'"
	@echo "INCLUDES='$(INCLUDES)'"
	